<project>
  <pomVersion>3</pomVersion>
  <extend>../../project.xml</extend>
  <groupId>${org.itgroundwork.groupid}</groupId>
  <id>foundation-webapp</id>
  <name>foundation-webapp</name>
  <package>org.itgroundwork.foundation</package>
  
  <dependencies>
  <dependency>
      <id>collage-api</id>
      <groupId>${org.itgroundwork.groupid}</groupId>
      <version>${org.groundwork.os.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>     
    </dependency>
     
    <!-- Collage Admin package -->
     
    
    
    <!-- External packages -->   
    <dependency>
      <id>${org.itgroundwork.log4j.id}</id>
      <version>${org.itgroundwork.log4j.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>
    </dependency>
    <dependency>
      <id>${org.itgroundwork.commons.logging.id}</id>
      <version>${org.itgroundwork.commons.logging.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>
    </dependency>
    
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>commons-lang</id>
      <version>2.0</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <properties>
	        <war.bundle>false</war.bundle>
	    </properties>
    </dependency>

    <dependency>
      <id>${org.itgroundwork.commons.logging.id}</id>
      <version>${org.itgroundwork.commons.logging.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>commons-collections</id>
      <version>3.0</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    
 
    
    <!-- Axis Web Service -->
    <dependency>
      <id>axis</id>
      <groupId>${org.itgroundwork.axis.id}</groupId>
      <version>${org.itgroundwork.axis.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>jaxrpc</id>
      <groupId>${org.itgroundwork.jaxrpc.id}</groupId>
      <version>${org.itgroundwork.jaxrpc.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>saaj</id>
      <groupId>saaj</groupId>
      <jar>saaj.jar</jar>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>wsdl4j</id>
      <groupId>${org.itgroundwork.wsdl4j.id}</groupId>
      <version>${org.itgroundwork.wsdl4j.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>commons-discovery</id>
      <groupId>${org.itgroundwork.commons.discovery.id}</groupId>
      <version>${org.itgroundwork.commons.discovery.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>activation</id>
      <groupId>${org.itgroundwork.activation.id}</groupId>
      <version>${org.itgroundwork.activation.version}</version>
      <properties>
			<war.bundle>true</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>el-api</id>
      <groupId>glassfish</groupId>
      <jar>el-api.jar</jar>
      <properties>
			<war.bundle>false</war.bundle>
		</properties>   
    </dependency>
    
    <dependency>
      <id>el-ri</id>
      <groupId>glassfish</groupId>
      <jar>el-ri.jar</jar>
      <properties>
			<war.bundle>false</war.bundle>
		</properties>   
    </dependency>
      
  </dependencies>
  
  
   <build>
    <sourceDirectory>src/java</sourceDirectory>
     <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
  </build>
   
</project>
