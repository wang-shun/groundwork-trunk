<div dojoType="LayoutContainer" layoutChildPriority="top-bottom" style="overflow: hidden; height: 100%; width: 100%">
	<div dojoType="ContentPane" layoutAlign="top" style="padding-top: 0px; background: #cccccc; margin: 0px; height: 26px; border-width: 0px 0px 1px 0px; border-style: solid; border-color: #333333;">
		<table width="100%">
			<tr>
			<td  style="font-weight: bold;">
				<table>
					<tr>
						<td align="left" tal:content="structure target:clone">							
						</td>
						<td align="left" tal:content="self/getName">
						</td>
						</tr>
				</table>
			</td>
			</tr>
		</table>
	</div>
	<!-- 
	the background-color, background-image and background-repeat css attributes are redundant here, 
	because they're populated in the Draw() method of DashboardObject class anyway
	
	<div dojoType="ContentPane" layoutAlign="client" style="height: 100%; padding: 0px; margin: 0px;" tal:attributes="style string:height: 100%;; padding: 0px;; margin:: 0px;; background-color: ${self/getBackgroundColor};; background-image: url('${self/getBackgroundImageURL}');; background-repeat: ${self/getRepeatCSS};;" tal:content="structure target:dashboard"> 
	-->
	<div dojoType="ContentPane" layoutAlign="client" style="height: 100%; padding: 0px; margin: 0px;" tal:attributes="style string:height: 100%;; padding: 0px;; margin:: 0px;;" tal:content="structure target:dashboard">	
		Dashboard
	</div>

</div>