<guava:template xmlns="http://www.w3.org/HTML" xmlns:guava="http://guava.sf.net">

<div dojoType="SplitPane" orientation="vertical" style="width: 100%; height: 100%;">
	<div dojoType="SplitPane" orientation="horizontal" sizerWidth="0" activeSizing="0" layoutAlign="top">
		<div dojoType="ContentPane" style="background: white;">
			<span guava:object="chatWindow">Chat Window</span>
		</div>
	
		<div dojoType="ContentPane" sizeShare="10" style="background: white;">
			<span guava:object="userList">User List</span>
		</div>
	</div>
	<div dojoType="ContentPane" style="background: white;" layoutAlign="bottom">
		<span guava:object="chatInput">Chat Input</span>
	</div>
</div>

</guava:template>
