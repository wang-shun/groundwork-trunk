<project xmlns:ant="jelly:ant"
         xmlns:j="jelly:core">
   
     <goal name="copy-webfiles">
		<copy toDir="target/gwos-jboss-monitoringAgent">
			<fileset dir="../../common/webapp"/>			
			<filterset>
				<filter token="appserver_camelcase" value="JBoss" />
				<filter token="appserver_lowercase" value="jboss" />
				<filter token="appserver_shortname" value="jboss" />
			</filterset>			
		</copy>
	</goal>

	<goal name="war" description="Build war file" prereqs="copy-webfiles">
		<attainGoal name="war:war" />
	</goal>    
</project>
