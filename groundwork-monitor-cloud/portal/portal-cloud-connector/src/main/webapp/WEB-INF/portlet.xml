<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd /opt/SUNWps/dtd/portlet.xsd"
	version="1.0" name="Cloud-Connector">
    <portlet>
	<portlet-name>GWOSCCPortlet</portlet-name>
	<description>GroundWork Cloud Connector Application</description>
	<display-name>Cloud Configuration</display-name>
	<portlet-class>org.groundwork.portlet.iframe.GWOSIFramePortlet
	</portlet-class>
	<supports>
	    <mime-type>text/html</mime-type>
	    <portlet-mode>VIEW</portlet-mode>
	</supports>
	<portlet-info>
	    <title>Cloud Configuration</title>
	</portlet-info>
	<init-param>
	    <name>URL</name>
	    <value><![CDATA[http://localhost/cloud-connector/monarch_clouds.cgi?top_menu=clouds&view=clouds&obj=connector&update_main=1]]></value>
	</init-param>
	<init-param>
	    <name>ATTACH_UID</name>
	    <value>true</value>
	</init-param>
	<init-param>
	    <name>allow_remote_url</name>
	    <value>true</value>
	</init-param>
    </portlet>
    <portlet>
	<portlet-name>CCOrphanedHosts</portlet-name>
	<description>GroundWork Cloud Connector Application</description>
	<display-name>Orphaned Hosts</display-name>
	<portlet-class>org.groundwork.portlet.iframe.GWOSIFramePortlet
	</portlet-class>
	<supports>
	    <mime-type>text/html</mime-type>
	    <portlet-mode>VIEW</portlet-mode>
	</supports>
	<portlet-info>
	    <title>Orphaned Hosts</title>
	</portlet-info>
	<init-param>
	    <name>URL</name>
	    <value><![CDATA[http://localhost/cloud-connector/monarch_clouds.cgi?top_menu=clouds&view=clouds&obj=orphaned_hosts&update_main=1]]></value>
	</init-param>
	<init-param>
	    <name>ATTACH_UID</name>
	    <value>true</value>
	</init-param>
	<init-param>
	    <name>allow_remote_url</name>
	    <value>true</value>
	</init-param>
    </portlet>
    <portlet>
	<portlet-name>CCElasticfox</portlet-name>
	<description>GroundWork Cloud Connector Application</description>
	<display-name>Elasticfox</display-name>
	<portlet-class>org.groundwork.portlet.iframe.GWOSIFramePortlet
	</portlet-class>
	<supports>
	    <mime-type>text/html</mime-type>
	    <portlet-mode>VIEW</portlet-mode>
	</supports>
	<portlet-info>
	    <title>Elasticfox</title>
	</portlet-info>
	<init-param>
	    <name>URL</name>
	    <value><![CDATA[http://localhost/cloud-connector/html/elasticfox.html]]></value>
	</init-param>
	<init-param>
	    <name>ATTACH_UID</name>
	    <value>true</value>
	</init-param>
	<init-param>
	    <name>allow_remote_url</name>
	    <value>true</value>
	</init-param>
    </portlet>
</portlet-app>
