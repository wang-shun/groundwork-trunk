<?xml version="1.0" encoding="UTF-8"?>
<network-monitoring>
    <profileType>opendaylight</profileType>
    <controller>
    </controller>
    <switch>
        <metric name="receivePackets"      description="Number of packets received" monitored="false" graphed="false" warningThreshold="10000" criticalThreshold="300000" />
        <metric name="transmitPackets"     description="Number of packets transmitted" monitored="false" graphed="false" warningThreshold="10000" criticalThreshold="300000" />
        <metric name="receiveBytes"        description="Number of bytes received" monitored="true"  graphed="true"  warningThreshold="20000000" criticalThreshold="70000000" />
        <metric name="transmitBytes"       description="Number of bytes transmitted" monitored="true"  graphed="true"  warningThreshold="20000000" criticalThreshold="70000000" />
        <metric name="receiveDrops"        description="Number of receive-packets dropped" monitored="false" graphed="false" warningThreshold="50" criticalThreshold="100" />
        <metric name="transmitDrops"       description="Number of transmit-packets dropped" monitored="false" graphed="false" warningThreshold="50" criticalThreshold="100" />
        <metric name="receiveErrors"       description="Number of receive-packets errors" monitored="true"  graphed="false" warningThreshold="50" criticalThreshold="100" />
        <metric name="transmitErrors"      description="Number of transmit-packet errors" monitored="true"  graphed="false" warningThreshold="100" criticalThreshold="500" />
        <metric name="receiveFrameError"   description="Number of receive frame errors" monitored="false" graphed="false" warningThreshold="100" criticalThreshold="500" />
        <metric name="receiveOverRunError" description="Number of receive overrun errors" monitored="false" graphed="false" warningThreshold="100" criticalThreshold="500" />
        <metric name="receiveCrcError"     description="Number of receive CRC errors" monitored="false" graphed="false" warningThreshold="100" criticalThreshold="500" />
        <metric name="collisionCount"      description="Number of transmit collisions" monitored="false" graphed="false" warningThreshold="100" criticalThreshold="500" />
    </switch>
</network-monitoring>
