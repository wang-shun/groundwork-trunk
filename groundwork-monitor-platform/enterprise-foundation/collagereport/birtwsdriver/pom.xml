<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.groundwork</groupId>
        <artifactId>gw-collagereport-pom</artifactId>
        <version>7.2.2-SNAPSHOT</version>
    </parent>

    <artifactId>org.groundwork.report.birt.data.oda.ws</artifactId>
    <version>7.2.2-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Groundwork BIRT ODA Driver Extension</name>
    <description>Groundwork BIRT ODA Driver Extension</description>

    <properties>
        <!--<ODA-WS-VERSION>${project.version}</ODA-WS-VERSION>-->
        <ODA-WS-VERSION>7.1.0</ODA-WS-VERSION>
        <COMMONS-DISCOVERY_JAR>commons-discovery-0.2.jar</COMMONS-DISCOVERY_JAR>
        <COMMONS-LOGGING_JAR>commons-logging-1.1.jar</COMMONS-LOGGING_JAR>
        <AXIS_JAR>axis-1.4.jar</AXIS_JAR>
        <JAXRPC_JAR>jaxrpc-1.1.jar</JAXRPC_JAR>
        <SAAJ_JAR>axis-saaj-1.2.jar</SAAJ_JAR>
        <WSDL4J_JAR>wsdl4j-1.6.2.jar</WSDL4J_JAR>
        <LOG4J_JAR>log4j-1.2.16.jar</LOG4J_JAR>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>collage-api</artifactId>
        </dependency>
        <dependency>
            <groupId>wsdl4j</groupId>
            <artifactId>wsdl4j</artifactId>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis-saaj</artifactId>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml</groupId>
            <artifactId>jaxrpc</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-discovery</groupId>
            <artifactId>commons-discovery</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.axis</groupId>
            <artifactId>axis</artifactId>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>collage-ws</artifactId>
        </dependency>

        <dependency>
            <groupId>org.eclipse.osgi</groupId>
            <artifactId>org.eclipse.osgi</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.core</groupId>
            <artifactId>org.eclipse.core.runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.datatools</groupId>
            <artifactId>org.eclipse.datatools.connectivity.oda</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.core</groupId>
            <artifactId>org.eclipse.core.runtime.compatibility.registry</artifactId>
        </dependency>
    </dependencies>

    <build>

        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>resources</directory>
                <includes>
                    <include>plugin.properties</include>
                    <include>plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>META-INF</targetPath>
                <directory>src/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>MANIFEST.MF</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.groundwork</groupId>
                                    <artifactId>collage-api</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>wsdl4j</groupId>
                                    <artifactId>wsdl4j</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>axis</groupId>
                                    <artifactId>axis-saaj</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>log4j</groupId>
                                    <artifactId>log4j</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>javax.xml</groupId>
                                    <artifactId>jaxrpc</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>commons-discovery</groupId>
                                    <artifactId>commons-discovery</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>commons-logging</groupId>
                                    <artifactId>commons-logging</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.axis</groupId>
                                    <artifactId>axis</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.groundwork</groupId>
                                    <artifactId>collage-ws</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/lib/</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestFile>target/classes/META-INF/MANIFEST.MF</manifestFile>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
