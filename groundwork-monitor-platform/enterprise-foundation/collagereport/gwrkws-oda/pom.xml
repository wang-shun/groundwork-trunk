<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.groundwork</groupId>
        <artifactId>gw-collagereport-pom</artifactId>
        <version>7.2.2-SNAPSHOT</version>
    </parent>
    <groupId>org.groundwork</groupId>
    <artifactId>gwrkws-oda</artifactId>
    <packaging>pom</packaging>
    <version>7.2.2-SNAPSHOT</version>
    <name>Groundwork BIRT ODA Zip Packaging</name>
    <description>Groundwork BIRT ODA Extensions Zip Packaging</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>org.groundwork.report.birt.data.oda.ws</artifactId>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>org.groundwork.report.birt.data.oda.ws.ui</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.groundwork</groupId>
                                    <artifactId>org.groundwork.report.birt.data.oda.ws</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/bundles/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.groundwork</groupId>
                                    <artifactId>org.groundwork.report.birt.data.oda.ws.ui</artifactId>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/bundles/</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptor>src/assembly/bin.xml</descriptor>
                    <!--<finalName>gwrkws-oda-${project.version}</finalName>-->
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
