<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.groundwork</groupId>
        <artifactId>gw-webapps-pom</artifactId>
        <version>7.2.2-SNAPSHOT</version>
    </parent>

    <groupId>org.groundwork</groupId>
    <artifactId>birtviewer</artifactId>
    <packaging>war</packaging>
    <name>Groundwork BIRT Viewer WAR</name>
    <description>Groundwork BIRT Report Viewer Web Application</description>

    <properties>
        <REPORT_DIRECTORY>${org.groundwork.report.directory}</REPORT_DIRECTORY>
        <BIRT_LOG_DIR>${org.groundwork.foundation.container.logs}</BIRT_LOG_DIR>
        <REPORT_TMP_DIRECTORY>${org.groundwork.report.temp.directory}</REPORT_TMP_DIRECTORY>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.eclipse.birt</groupId>
                <artifactId>birtviewer</artifactId>
                <version>2.5.2</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>org.groundwork</groupId>
                <artifactId>org.eclipse.datatools.enablement.oda.ws</artifactId>
                <version>${groundwork.version}</version>
            </dependency>
            <dependency>
                <groupId>org.groundwork</groupId>
                <artifactId>org.groundwork.report.birt.data.oda.ws</artifactId>
                <version>3.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.eclipse.birt</groupId>
            <artifactId>birtviewer</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.groundwork.portal.extension</groupId>
            <artifactId>groundwork-container-ext-model</artifactId>
            <version>7.2.2-SNAPSHOT</version>
        </dependency>

        <dependency>
            <artifactId>groundwork-container-ext-rest-client</artifactId>
            <groupId>com.groundwork.portal.extension</groupId>
            <version>7.2.2-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>c3p0</groupId>
            <artifactId>c3p0</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-jaxrs</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>javax.ws.rs</groupId>
            <artifactId>jsr311-api</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>collagereport-eventhandler</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

    </dependencies>

    <build>
        <finalName>birtviewer</finalName>
        <sourceDirectory>reports</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/birtviewer/WEB-INF/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>web.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                            <overwrite>true</overwrite>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <workDirectory>${project.build.directory}/target/overlay</workDirectory>
                    <overlays>
                        <overlay>
                            <groupId>org.eclipse.birt</groupId>
                            <artifactId>birtviewer</artifactId>
                            <excludes>
                                <exclude>WEB-INF/classes/images/sampleimage-dependency.jpg</exclude>
                                <exclude>WEB-INF/web.xml</exclude>
                                <!-- exclude original version of this patched artifact -->
                                <exclude>WEB-INF/platform/plugins/org.eclipse.datatools.enablement.oda.ws_1.2.2.v201001131420.jar</exclude>
                            </excludes>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.groundwork</groupId>
                                    <artifactId>org.groundwork.report.birt.data.oda.ws</artifactId>
                                    <outputDirectory>${project.build.directory}/birtviewer/WEB-INF/platform/plugins</outputDirectory>
                                    <overWrite>true</overWrite>
                                    <destFileName>org.groundwork.report.birt.data.oda.ws_3.0.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.groundwork</groupId>
                                    <artifactId>org.eclipse.datatools.enablement.oda.ws</artifactId>
                                    <outputDirectory>${project.build.directory}/birtviewer/WEB-INF/platform/plugins</outputDirectory>
                                    <overWrite>true</overWrite>
                                    <destFileName>org.eclipse.datatools.enablement.oda.ws_1.2.2.v${groundwork.version}.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.postgresql</groupId>
                                    <artifactId>postgresql</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/birtviewer/WEB-INF/platform/plugins/org.eclipse.birt.report.data.oda.jdbc_2.5.2.v20100205/drivers
                                    </outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
