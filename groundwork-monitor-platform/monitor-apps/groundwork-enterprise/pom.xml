<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.groundwork</groupId>
        <artifactId>gw-monitor-apps-pom</artifactId>
        <version>7.2.2-SNAPSHOT</version>
    </parent>

    <artifactId>groundwork-enterprise</artifactId>
    <version>7.2.2-SNAPSHOT</version>
    <name>Groundwork Enterprise EAR</name>
    <description>Groundwork Enterprise Application EAR</description>
    <packaging>ear</packaging>

    <dependencies>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>status-viewer</artifactId>
            <type>war</type>
        </dependency>
        <!--<dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>portal-console</artifactId>
            <type>war</type>
        </dependency>-->
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>status-restservice</artifactId>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>statusviewer-common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.wutka</groupId>
            <artifactId>jox</artifactId>
            <!--<exclusions>-->
                <!--<exclusion>-->
                    <!--<groupId>*</groupId>-->
                    <!--<artifactId>*</artifactId>-->
                <!--</exclusion>-->
            <!--</exclusions>-->
        </dependency>
        <dependency>
            <groupId>org.jfree</groupId>
            <artifactId>jfreechart</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jcommon</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss</groupId>
            <artifactId>jboss-client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.icefaces</groupId>
            <artifactId>icefaces</artifactId>
            <classifier>EE</classifier>
        </dependency>
        <dependency>
            <groupId>org.icefaces</groupId>
            <artifactId>icefaces-facelets</artifactId>
            <classifier>EE</classifier>
        </dependency>
        <dependency>
            <groupId>org.icefaces</groupId>
            <artifactId>icefaces-comps</artifactId>
            <classifier>EE</classifier>
        </dependency>
        <dependency>
            <groupId>org.icefaces</groupId>
            <artifactId>icefaces-composite-comps</artifactId>
            <classifier>EE</classifier>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>gw-portal-common</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>commons-digester</groupId>
            <artifactId>commons-digester</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>gw-webcommon</artifactId>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>collagerest-client</artifactId>
        </dependency>
        <dependency>
            <artifactId>groundwork-container-ext-rest-client</artifactId>
            <groupId>com.groundwork.portal.extension</groupId>
        </dependency>
        <dependency>
            <groupId>org.groundwork</groupId>
            <artifactId>collagerest-auth</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>groundwork-enterprise</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <displayName>Groundwork Enterprise Application</displayName>
                    <archive>
                        <!--<manifestFile>application/MANIFEST.MF</manifestFile>-->
                        <manifestEntries>
                            <Dependencies>org.apache.axis,org.apache.commons.discovery,net.sf.wsdl4j,com.groundwork.collage,edu.emory.mathcs.backport,org.apache.commons.logging,org.apache.commons.collections,org.apache.commons.lang,org.apache.commons.lang3,javax.faces.api,com.sun.jsf-impl,org.apache.commons-fileupload,javax.portlet.api,org.antlr,javax.el.api,org.apache.commons.beanutils,org.gatein.pc,org.apache.httpcomponents,org.apache.xerces,org.apache.commons.configuration</Dependencies>
                        </manifestEntries>
                    </archive>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <skinnyWars>true</skinnyWars>
                    <modules>
                        <webModule>
                            <groupId>org.groundwork</groupId>
                            <artifactId>status-viewer</artifactId>
                            <context-root>/portal-statusviewer</context-root>
                            <bundleFileName>status-viewer-${groundwork.release}.war</bundleFileName>
                        </webModule>
                        <!--<webModule>
                            <groupId>org.groundwork</groupId>
                            <artifactId>portal-console</artifactId>
                            <context-root>/portal-console</context-root>
                        </webModule>-->
                        <webModule>
                            <groupId>org.groundwork</groupId>
                            <artifactId>status-restservice</artifactId>
                            <context-root>/status-restservice</context-root>
                            <bundleFileName>status-restservice-${groundwork.release}.war</bundleFileName>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
