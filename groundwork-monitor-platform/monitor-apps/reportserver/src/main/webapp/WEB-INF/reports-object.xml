<deployments>
  <deployment>
    <parent-ref>groundwork-monitor.reports</parent-ref>
    <if-exists>overwrite</if-exists>
    <window>
      <window-name>ReportTreeWindow</window-name>
      <instance-ref>ReportTreeInstance</instance-ref>
      <region>left</region>
      <height>0</height>
    </window>
  </deployment>
  <deployment>
    <parent-ref>groundwork-monitor.reports</parent-ref>
    <if-exists>overwrite</if-exists>
    <window>
      <window-name>ReportSelectorWindow</window-name>
      <instance-ref>ReportSelectorInstance</instance-ref>
      <region>left</region>
      <height>1</height>
    </window>
  </deployment>
  <deployment>
    <parent-ref>groundwork-monitor.reports</parent-ref>
    <if-exists>overwrite</if-exists>
    <window>
      <window-name>ReportViewerWindow</window-name>
      <instance-ref>ReportViewerInstance</instance-ref>
      <region>center</region>
      <height>0</height>
    </window>
  </deployment>
</deployments>
