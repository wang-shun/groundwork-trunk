<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
	<managed-bean>
		<managed-bean-name>reportTreeBean</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.reports.bean.ReportTreeBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>renderMgr</managed-bean-name>
		<managed-bean-class>com.icesoft.faces.async.render.RenderManager</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>localeBean</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.common.LocaleBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

	<!-- report server -->

	<managed-bean>
		<managed-bean-name>viewreportselect</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.reports.bean.ViewReportSelect</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viewReportSelectBean</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.reports.bean.ViewReportSelectBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>inputFileController</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.reports.bean.InputFileController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>fileListBean</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.reports.bean.FileListBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>reportViewerBean</managed-bean-name>
		<managed-bean-class>com.groundworkopensource.portal.reports.bean.ReportViewerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<application>
		<locale-config>
			<default-locale>en</default-locale>
      		<supported-locale>fr</supported-locale>
		</locale-config>
		<message-bundle>ReportViewerResources</message-bundle>
		<view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
	</application>
</faces-config>
