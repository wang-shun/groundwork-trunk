#!/usr/local/groundwork/perl/bin/perl -w --

use strict;
use warnings;

use Getopt::Long;
use Pod::Usage;
use dassmonarch;

my $VERSION = "1.0.0";
( my $program = $0 ) =~ s{.*/}{};

use vars qw($opt_d $opt_V $opt_h $opt_p $opt_e $opt_man);

# Parse Command Line Opts
Getopt::Long::Configure('bundling');
GetOptions(
    "V"             => \$opt_V,
    "version"       => \$opt_V,
    "h"             => \$opt_h,
    "help"          => \$opt_h,
    "m"             => \$opt_man,
    "man"           => \$opt_man,
    "d=s"           => \$opt_d,
    "debuglevel=s"  => \$opt_d,
    "p=s"           => \$opt_p,
    "hostprofile=s" => \$opt_p,
    "e=s"           => \$opt_e,
    "external=s"    => \$opt_e,
);

# GetOptions('-h' => \$opt_h, --man => \$opt_man) or pod2usage(2);
pod2usage( -verbose => 1 ) if $opt_h;
pod2usage( -exitval => 0, -verbose => 2 ) if $opt_man;

if ($opt_V) {
    print "$program version $VERSION.\n";
    exit 0;
}

if ( not $opt_e ) {
    print "$program:  host external is not set; use -e to specify a host-external\n";
    exit 1;
}

if ( not $opt_p ) {
    print "$program:  target hostprofile name is not set; use -p to specify a target hostprofile name\n";
    exit 1;
}

my $dm = dassmonarch->new();

$dm->set_debuglevel($opt_d) if $opt_d;

if ( $dm->assign_external_to_hostprofile( $opt_p, $opt_e ) ) {
    exit 0;
}
else {
    exit 1;
}

__END__

=head1 NAME

monarch_assign_external_to_hostprofile

=head1 SYNOPSIS

monarch_assign_external_to_hostprofile -e external -p hostprofile

=head1 DESCRIPTION

Assign a host external to a host profile.

=head1 OPTIONS

-d [error,warning,info,verbose]

=head1 ORIGINAL AUTHOR

dass IT GmbH maik.aussendorf@dass-it.de

=cut

