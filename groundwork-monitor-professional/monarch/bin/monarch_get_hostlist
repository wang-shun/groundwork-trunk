#!/usr/local/groundwork/perl/bin/perl -w --

use strict;
use warnings;

use Getopt::Long;
use Pod::Usage;
use dassmonarch;

my $VERSION = "1.0.0";
( my $program = $0 ) =~ s{.*/}{};

use vars qw($opt_d $opt_V $opt_h $opt_H $opt_man);

# Parse Command Line Opts
Getopt::Long::Configure('bundling');
GetOptions(
    "V"            => \$opt_V,
    "version"      => \$opt_V,
    "h"            => \$opt_h,
    "help"         => \$opt_h,
    "m"            => \$opt_man,
    "man"          => \$opt_man,
    "d=s"          => \$opt_d,
    "debuglevel=s" => \$opt_d,
);

# GetOptions('-h' => \$opt_h, --man => \$opt_man) or pod2usage(2);
pod2usage( -verbose => 1 ) if $opt_h;
pod2usage( -exitval => 0, -verbose => 2 ) if $opt_man;

if ($opt_V) {
    print "$program version $VERSION.\n";
    exit 0;
}

my $dm = dassmonarch->new();

$dm->set_debuglevel( $opt_d || 'error' );

my @hostlist = $dm->get_hostlist();

if ( not @hostlist ) {
    $dm->debug( 'error', "$program:  could not get hostlist" );
}

foreach my $h (@hostlist) {
    print "$h\n";
}

__END__

=head1 NAME

monarch_get_hostlist

=head1 SYNOPSIS

monarch_get_hostlist

=head1 DESCRIPTION

Get a list of all configured hosts in Monarch.  Each hostname is returned on a separate line of output.

=head1 OPTIONS

-d [error,warning,info,verbose]

=head1 ORIGINAL AUTHOR

dass IT GmbH maik.aussendorf@dass-it.de

=cut

