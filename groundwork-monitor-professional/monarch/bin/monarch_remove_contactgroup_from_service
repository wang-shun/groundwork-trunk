#!/usr/local/groundwork/perl/bin/perl -w --

use strict;
use warnings;

use Getopt::Long;
use Pod::Usage;
use dassmonarch;

my $VERSION = "1.0.0";
( my $program = $0 ) =~ s{.*/}{};

use vars qw($opt_d $opt_V $opt_h $opt_c $opt_s $opt_man);

# Parse Command Line Opts
Getopt::Long::Configure('bundling');
GetOptions(
    "V"              => \$opt_V,
    "version"        => \$opt_V,
    "h"              => \$opt_h,
    "help"           => \$opt_h,
    "m"              => \$opt_man,
    "man"            => \$opt_man,
    "d=s"            => \$opt_d,
    "debuglevel=s"   => \$opt_d,
    "c=s"            => \$opt_c,
    "contactgroup=s" => \$opt_c,
    "s=s"            => \$opt_s,
    "servicename=s"  => \$opt_s,
);

# GetOptions('-h' => \$opt_h, --man => \$opt_man) or pod2usage(2);
pod2usage( -verbose => 1 ) if $opt_h;
pod2usage( -exitval => 0, -verbose => 2 ) if $opt_man;

if ($opt_V) {
    print "$program version $VERSION.\n";
    exit 0;
}

if ( not $opt_c ) {
    print "$program:  contactgroup name is not set; use -c to specify a contactgroupname\n";
    exit 1;
}

if ( not $opt_s ) {
    print "$program:  service name is not set, use -s to set a servicename\n";
    exit 1;
}

my $dm = dassmonarch->new();

$dm->set_debuglevel($opt_d) if $opt_d;

$dm->remove_contactgroup_from_servicename( $opt_c, $opt_s );

__END__

=head1 NAME

monarch_remove_contactgroup_from_service

=head1 SYNOPSIS

monarch_remove_contactgroup_from_service -c contactgroup -s servicename

=head1 DESCRIPTION

De-assign a contactgroup from a generic service.  Newly defined
host-services with this service name will not have the contactgroup
assigned.  If you want to apply this to existing host-services, you will
have to apply the new setting manually.

=head1 OPTIONS

-d [error,warning,info,verbose]

=head1 ORIGINAL AUTHOR

dass IT GmbH maik.aussendorf@dass-it.de

=cut

