#!/bin/tcsh

# This noma/noma_2.0.3/perl-update-for-noma-2.0.3 script is for upgrading 
# an early 6.7.0 development build to include the extra Perl module that
# is demanded by the NoMa 2.0.3 release beyond the packages demanded by
# the immediately preceding release.  It should have no lasting utility,
# once BitRock folds the complete set of Perl packages into our builds.

set path = (/usr/local/groundwork/perl/bin $path)

cpan Carp
cpan Data::Dumper
perl -MCPAN -e 'install Perl::OSType'
perl -MCPAN -e 'install version'
perl -MCPAN -e 'install ExtUtils::Install'
perl -MCPAN -e 'install ExtUtils::Installed'
perl -MCPAN -e 'install ExtUtils::ParseXS'
perl -MCPAN -e 'install Devel::StackTrace'
perl -MCPAN -e 'install Module::CoreList'
perl -MCPAN -e 'install Test::Warn'
perl -MCPAN -e 'install Clone'
perl -MCPAN -e 'install Module::Metadata'
perl -MCPAN -e 'install JSON::PP'
perl -MCPAN -e 'install CPAN::Meta::YAML'
perl -MCPAN -e 'install Parse::CPAN::Meta'
perl -MCPAN -e 'install CPAN::Meta::Requirements'
perl -MCPAN -e 'install CPAN::Meta'
perl -MCPAN -e 'install Locale::Maketext::Simple'
perl -MCPAN -e 'install Module::Load'
perl -MCPAN -e 'install Params::Check'
perl -MCPAN -e 'install Module::Load::Conditional'
perl -MCPAN -e 'install IPC::Cmd'
perl -MCPAN -e 'install ExtUtils::CBuilder'
perl -MCPAN -e 'install Module::Build'
perl -MCPAN -e 'install Test::Exception'
perl -MCPAN -e 'install Class::Data::Inheritable'
perl -MCPAN -e 'install Exception::Class'
perl -MCPAN -e 'install Test::Differences'
perl -MCPAN -e 'install Test::NoWarnings'
perl -MCPAN -e 'install Test::Deep'
perl -MCPAN -e 'install PadWalker'
perl -MCPAN -e 'install Data::Dumper::Names'
perl -MCPAN -e 'install Test::Most'
